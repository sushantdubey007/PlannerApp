<%- include("header") -%>
    <div class="box" id="heading">
      <h1><%= toDoList %>'s To Do List</h1>
    </div>

    <div class="box">

    <% newListItem.forEach(function(itemVal){ %>
      <form  action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=itemVal._id %>" onChange="this.form.submit()">
          <p style="color:SlateBlue;"> <%=itemVal.name%> </p>
        </div>
        <input type="hidden" name="listName" value="<%=toDoList %>"></input>
      </form>

    <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="inputItem" placeholder="Add New Item" autocomplete="off">
        <button type="submit" name="listButton" value="<%= toDoList %>">+</button>
      </form>
    </div>
<%- include("footer") -%>
